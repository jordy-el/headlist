<div class="ui three column stackable grid">
    <div class="column"></div>
    <div class="column">
        <%= form_for Post.new, html: { class: "ui form" } do |f| %>
            <%= f.hidden_field :timeline, value: @user.timeline.id %>
            <%= f.hidden_field :user, value: current_user.id %>
            <div class="field">
                <%= f.text_area :content, rows: "2", placeholder: "Say something to #{@user.first_name}!" %>
            </div>
            <div class="field">
                <%= f.submit "Submit", class: "ui fluid primary button" %>
            </div>
        <% end %>
        <% if @posts %>
            <div class="ui large threaded comments">
            <h3 class="ui dividing header"><%= "#{@user.first_name}'s Timeline" %></h3>
                <% @posts.each do |p| %>
                    <div class="comment">
                        <a class="avatar">
                            <img src="/images/avatar/small/steve.jpg">
                        </a>
                        <div class="content">
                            <%= link_to "#{p.user.first_name} #{p.user.last_name}", timeline_path(p.user), html: { class: "author" } %>
                            <div class="metadata">
                                <div class="date"><%= p.created_at %></div>
                            </div>
                            <div class="text">
                                <%= p.content %>
                            </div>
                            <!--<div class="actions">
                                <a class="reply active">Reply</a>
                            </div>
                            <form class="ui reply form">
                                <div class="field">
                                    <textarea></textarea>
                                </div>
                                <div class="ui primary submit labeled icon button">
                                    <i class="icon edit"></i> Add Reply
                                </div>
                            </form>-->
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
    <div class="column"></div>
</div>