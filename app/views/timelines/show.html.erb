<div class="ui three column stackable grid">
    <div class="column">
        <div class="ui centered card">
            <div class="image">
                <img src="https://pbs.twimg.com/profile_images/786350624581353472/bZ1rf97t_normal.jpg">
            </div>
            <div class="content">
                <a class="header"><%= "#{@user.first_name} #{@user.last_name}" %></a>
                <div class="meta">
                    <span class="date">Joined in <%= @user.created_at.to_s[0..3] %></span>
                </div>
            </div>
            <div class="extra content">
                <a>
                    <i class="user icon"></i>
                    Friend Count Stub
                </a>
            </div>
            <% if @user != current_user %>
                <div class="ui two bottom attached buttons">
                    <div class="ui button">
                        <i class="id card icon"></i>
                        Bio Stub
                    </div>
                    <div class="ui button">
                        <i class="add icon"></i>
                        Add Stub
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="column">
        <%= form_for Post.new, html: { class: "ui form" } do |f| %>
            <%= f.hidden_field :timeline, value: @user.timeline.id %>
            <%= f.hidden_field :user, value: current_user.id %>
            <div class="field">
                <%= f.text_area :content, rows: "2", placeholder: "Say something to #{@user.first_name}!" %>
            </div>
            <div class="field">
                <%= f.submit "Submit", class: "ui fluid primary button" %>
            </div>
        <% end %>
        <% if @posts %>
            <div class="ui large threaded comments">
            <h3 class="ui dividing header"><%= "#{@user.first_name}'s Timeline" %></h3>
                <% @posts.each do |p| %>
                    <div class="comment">
                        <a class="avatar">
                            <img src="https://pbs.twimg.com/profile_images/786350624581353472/bZ1rf97t_normal.jpg">
                        </a>
                        <div class="content">
                            <%= link_to "#{p.user.first_name} #{p.user.last_name}", timeline_path(p.user), html: { class: "author" } %>
                            <div class="metadata">
                                <div class="date"><%= p.created_at %></div>
                            </div>
                            <div class="text">
                                <%= p.content %>
                            </div>
                            <!--<div class="actions">
                                <a class="reply active">Reply</a>
                            </div>
                            <form class="ui reply form">
                                <div class="field">
                                    <textarea></textarea>
                                </div>
                                <div class="ui primary submit labeled icon button">
                                    <i class="icon edit"></i> Add Reply
                                </div>
                            </form>-->
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
    <div class="column">
        <div class="ui cards">
            <% @randoms.each do |r| %>
                <div class="ui centered card">
                    <div class="content">
                        <img class="left floated tiny ui circular image" src="https://pbs.twimg.com/profile_images/786350624581353472/bZ1rf97t_normal.jpg">
                        <div class="header"><%= "#{r.first_name} #{r.last_name}" %></div>
                    </div>
                    <div class="ui bottom attached button">
                        <i class="add icon"></i>
                        Add Stub
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>