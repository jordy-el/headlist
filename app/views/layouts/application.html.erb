<!DOCTYPE html>
<html>
  <head>
    <title>HeadList</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="padding-top: 40px;">
    <div class="ui blue inverted fixed menu" style="border-radius: 0;">
        <div class="header item">
            <%= semantic_icon(:users) %>
            <p>HeadList</p>
        </div>
        <% if user_signed_in? %>
            <div class="item">Posts</div>
            <div class="item"><%= link_to current_user.first_name, timeline_path %></div>
            <div class="item">Search</div>
            <div class="menu right">
                <div class="item"><%= link_to "Log Out", destroy_user_session_path, method: :delete %></div>
            </div>    
        <% end %>
    </div>
    <%= semantic_flash %>
    <%= yield %>
  </body>
</html>
