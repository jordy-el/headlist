<div class="ui centered card">
    <div class="image">
        <img>
    </div>
    <div class="content">
        <a class="header"><%= "#{@user.first_name} #{@user.last_name}" %></a>
        <div class="meta">
            <span class="date">Joined in <%= @user.created_at.to_s[0..3] %></span>
        </div>
    </div>
    <div class="extra content">
        <a href="<%= friends_path(@user) %>">
            <i class="user icon"></i>
            <%= @user.friends.length %> Friends
        </a>
    </div>
    <% if addable? %>
        <%= link_to "Add Friend", send_request_path(@user), method: :post, class: "ui bottom attached blue button" %>
    <% end %>
</div>