<%= form_for @comment, html: { class: 'ui reply form', style: 'margin-top: -1em;' } do |f| %>
    <%= f.hidden_field :post, value: post.id %>
    <div class="field">
        <%= f.text_field :content %>
    </div>
    <div class="field">
        <%= f.submit 'Reply', class: 'ui fluid primary button' %>
    </div>
<% end %>